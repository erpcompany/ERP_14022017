@model IEnumerable<ERP.Web.Models.Database.HT_NGUOI_DUNG>

@{
    ViewBag.Title = "Index";
}

<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
<link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Areas/TruongAnHCM/Content/css/NguoiDungTAHCM.css" rel="stylesheet" />

<link href="~/Content/download/dist/css/AdminLTE.css" rel="stylesheet" />
<script src="~/Content/download/angularjs/angular.min.js"></script>
<script src="~/Content/download/angularjs/dirPagination.js"></script>
<script src="~/Areas/TruongAnHCM/Content/js/NguoiDungTAHCM.js"></script>
<link href="~/Content/download/bootstrap/css/layout_all.css" rel="stylesheet" />

<div ng-app="userApp" ng-controller="userCtrl">
    <div class="content">

        <div id="quick-access">
            <form class="form-inline quick-search-form" role="form" action="#">
                <div class="form-group" style="width: 100%">
                    <input type="text" style="width: 60%" class="form-control" placeholder="Nhập tên người dùng cần tìm kiếm vào đây" ng-model="search_text">
                </div>
            </form>
        </div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Thêm người dùng mới</button>

        <!-- Modal Thêm mới -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset id="addnewform">
                                <!-- Form Name -->
                                <legend>Thêm người dùng mới</legend>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Username </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Username" class="form-control input-md" ng-model="username">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Mật khẩu: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Password" class="form-control input-md" ng-model="password">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Họ và tên: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Họ và tên" class="form-control input-md" ng-model="hovaten">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Số điện thoại: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Số điện thoại" class="form-control input-md" ng-model="sdt">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Email </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Email" class="form-control input-md" ng-model="email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Admin </label>
                                        <div class="col-md-4">
                                            <input type="checkbox" ng-model="admin">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Allowed </label>
                                        <div class="col-md-4">
                                            <input type="checkbox" ng-model="allowed">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Giới tính: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Username" class="form-control input-md" ng-model="gioitinh">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Ngày sinh </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Password" class="form-control input-md" ng-model="ngaysinh">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Quê quán: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Họ và tên" class="form-control input-md" ng-model="quequan">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Trình độ học vấn: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Số điện thoại" class="form-control input-md" ng-model="trinhdohocvan">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Mã phòng ban </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Email" class="form-control input-md" ng-model="maphongban">
                                        </div>
                                    </div>
                                </div>
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-12 addnew">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="add()" data-dismiss="modal">Thêm mới</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--end modal-->
        <!-- Modal Update -->
        <div class="modal fade" id="myEdit" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Sửa người dùng</legend>
                                
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Username </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Username" class="form-control input-md" ng-model="item.USERNAME" ng-disabled="true">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Mật khẩu: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Password" class="form-control input-md" ng-model="item.PASSWORD">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Họ và tên: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Họ và tên" class="form-control input-md" ng-model="item.HO_VA_TEN">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Số điện thoại: </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Số điện thoại" class="form-control input-md" ng-model="item.SDT">
                                        </div>
                                    </div>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Email </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Email" class="form-control input-md" ng-model="item.EMAIL">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Admin </label>
                                        <div class="col-md-4">
                                            <input type="checkbox" ng-model="item.IS_ADMIN">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Allowed </label>
                                        <div class="col-md-4">
                                            <input type="checkbox" ng-model="item.ALLOWED">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="name">Mã công ty </label>
                                        <div class="col-md-8">
                                            <input type="text" placeholder="Email" class="form-control input-md" ng-model="item.MA_CONG_TY" ng-disabled="true">
                                        </div>
                                    </div>
                                </div> 
                                <!-- Button (Double) -->
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="anmelden"></label>
                                    <div class="col-md-12 addnew">
                                        <button id="addnew" name="addnew" class="btn btn-success" ng-click="save(item.ID)" data-dismiss="modal">Lưu</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button id="exit" name="exit" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->
        <!-- Modal delete -->
        <div class="modal fade" id="delete_item" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">

                    <div class="modal-body">
                        <form class="form-horizontal" name="myForm" novalidate>
                            <fieldset>
                                <!-- Form Name -->
                                <legend>Xóa người dùng</legend>
                                <center>Bạn có thực sự muốn xóa hàng <b>{{item.USERNAME}}</b></center>
                                <p></p>

                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="delete"></label>
                                    <div class="col-md-8">
                                        <button id="delete" name="delete" class="btn btn-danger" ng-click="delete(item.ID)" data-dismiss="modal">Xóa</button>
                                        <button id="exit" name="exit" class="btn btn-success" data-dismiss="modal">Thoát</button>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <!--end modal-->

        <table id="example" class="table table-striped table-bordered" cellspacing="0" name="tblhanghoa">
            <thead>
                <tr>
                    <th></th>
                    <th>Họ và tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Công ty</th>
                    <th>Sửa</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>

                <tr dir-paginate-start="item in filtered = (danhsachuser | filter: {HO_VA_TEN:search_text}) | itemsPerPage:3 " class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td>
                        <button class="expand" ng-if="item.expanded" ng-click="item.expanded = false"  ><i class="fa minus fa-minus-circle" aria-hidden="true"></i></button>
                        <button class="expand" type="button" ng-if="!item.expanded"  ng-click="item.expanded = true" ng-><i class="fa plus fa-plus-circle" aria-hidden="true"></i></button>
                    </td>
                    <td>{{item.HO_VA_TEN }}</td>
                    <td>{{item.SDT}}</td>
                    <td>{{item.EMAIL}}</td>
                    <td>{{item.MA_CONG_TY}}</td>

                    <td>
                        <button class="btn btn-success btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#myEdit"><i class="glyphicon glyphicon-edit"></i></button>
                    </td>
                    <td>
                        <button class="btn btn-warning btn-circle" ng-click="edit(item)" type="button" data-toggle="modal" data-target="#delete_item"><i class="glyphicon glyphicon-remove"></i></button>
                        <!--<button class="btn btn-warning btn-circle" ng-click="delete(item.MA_KHO)"><i class="glyphicon glyphicon-remove"></i></button>-->
                    </td>

                </tr>
                <!--Detail row-->
                <tr ng-if="item.expanded" dir-paginate-end="" ng-controller="nhanvienCtrl">
                    
                    <td colspan="9">
                        <div class="content expandrow">

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#chitiet">Chi tiết hàng hóa</a></li>
                                <li><a data-toggle="tab" href="#tonkho" ng-click="get_nhanvien(item.ID)">Tồn kho</a></li>
                            </ul>

                            <div class="tab-content">
                                <!--Tab chi tiết hàng hóa-->
                                <div id="chitiet" class="tab-pane fade in active">
                                    <fieldset class="col-md-4 first">
                                        <legend>General</legend>

                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Mã hàng HT: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Mã hàng hệ thống" class="form-control input-md" ng-model="item.MA_HANG_HT" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-4 control-label " for="name">Mã hàng nhập: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Mã hàng nhập" class="form-control input-md" ng-model="danhsachnhanvien.NGAY_SINH" ng-disabled="true">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Tên hàng: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Tên hàng" class="form-control input-md" ng-model="item.TEN_HANG" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-4 control-label " for="name">Mã nhóm hàng: </label>
                                            <div class="col-md-8">
                                                <select ng-model="item.MA_NHOM_HANG" class="form-control input-md" ng-disabled="true">
                                                    <option ng-repeat="x in danhsachnhomhang" value="{{x.MA_NHOM_HANG}}">{{x.TEN_NHOM_HANG}}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Seri: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Seri" class="form-control input-md" ng-model="item.SERI " ng-disabled="true">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Đơn vị tính: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Đơn vị tính" class="form-control input-md" ng-model="item.DON_VI_TINH" ng-disabled="true">
                                            </div>
                                        </div>
                                    </fieldset>


                                    <fieldset class="col-md-4 second">
                                        <legend>Thông tin thêm</legend>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label" for="name">Model đặc biệt: </label>
                                            <div class="col-md-8">
                                                <input type="checkbox" ng-checked="item.MODEL_DAC_BIET==true" ng-model="item.MODEL_DAC_BIET" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Hình ảnh: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Hình ảnh" class="form-control input-md" ng-model="item.HINH_ANH" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="name">Đặc tính: </label>
                                            <div class="col-md-8">
                                                <input type="text" placeholder="Đặc tính" class="form-control input-md dactinh" ng-model="item.DAC_TINH" ng-disabled="true">
                                            </div>
                                        </div>


                                        <!-- Textarea -->
                                        <div class="form-group">
                                            <label class="col-md-4 control-label padding" for="ghichu">Ghi chú</label>
                                            <div class="col-md-8">
                                                <textarea class="form-control" id="ghichu" name="ghichu" ng-model="item.GHI_CHU " ng-disabled="true">Ghi chú</textarea>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset class="col-md-3 third">
                                        <legend>Tài khoản</legend>
                                        <div class="form-group">
                                            <label class="col-md-6 control-label padding" for="name">Hạch toán: </label>
                                            <div class="col-md-6">
                                                <input type="text" placeholder="Hạch toán" class="form-control input-md" ng-model="item.TK_HACH_TOAN_KHO" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-6 control-label padding" for="name">Doanh thu: </label>
                                            <div class="col-md-6">
                                                <input type="text" placeholder="Doanh thu" class="form-control input-md" ng-model="item.TK_DOANH_THU" ng-disabled="true">
                                            </div>
                                        </div>
                                        <!-- Text input-->
                                        <div class="form-group">
                                            <label class="col-md-6 control-label padding" for="name">Chi phí: </label>
                                            <div class="col-md-6">
                                                <input type="text" placeholder="Chi phí" class="form-control input-md" ng-model="item.TK_CHI_PHI" ng-disabled="true">
                                            </div>
                                        </div>
                                    </fieldset>

                                </div>
                                <div id="tonkho" class="tab-pane fade">
                                    {{nhanvien.NGAY_SINH}}
                                    {{nhanvien.GIOI_TINH}}
                                    <h3>Menu 2</h3>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>
    <dir-pagination-controls max-size="1" style="float:right;"
                             direction-links="true"
                             boundary-links="true">
    </dir-pagination-controls>
</div>
<script src="~/Content/download/angularjs/angular-ui-router.js"></script>